<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>Restaurante.Persistencia.FileUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controler</servlet-name>
        <servlet-class>Restaurante.Persistencia.Controler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControlerIMG</servlet-name>
        <servlet-class>Restaurante.Persistencia.ControlerIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileUpdateServlet</servlet-name>
        <servlet-class>Restaurante.Persistencia.FileUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/FileUploadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controler</servlet-name>
        <url-pattern>/Controler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControlerIMG</servlet-name>
        <url-pattern>/ControlerIMG</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileUpdateServlet</servlet-name>
        <url-pattern>/FileUpdateServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
